<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sg.edu.c347rp.p07_smsretriever.fragment_second">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFDBDB"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvFrag1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Only SMS with this word" />

        <EditText
            android:id="@+id/etFrag1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retrieve SMS" />

        <TextView
            android:id="@+id/tvFrag2"
            android:layout_width="match_parent"
            android:layout_height="343dp" />

    </LinearLayout>

  </ScrollView>
